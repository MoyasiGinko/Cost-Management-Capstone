<%= form_with(model: @category, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.url_field :icon %>
  </div>

  <div class="actions">
    <%= form.submit "Create Category" %>
  </div>
<% end %>
