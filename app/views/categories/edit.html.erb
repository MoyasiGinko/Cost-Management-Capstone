<h1>Edit Category</h1>

<%= form_with(model: @category, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.url_field :icon %>
  </div>

  <div class="actions">
    <%= form.submit "Update Category" %>
  </div>
<% end %>

<%= link_to "Back", category_path(@category) %>
