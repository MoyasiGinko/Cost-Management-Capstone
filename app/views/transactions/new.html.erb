<h1>New Transaction</h1>
<%= form_with(model: [@category, @transaction], local: true) do |form| %>
  <div class="field">
    <%= form.label :name, 'Name' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :amount, 'Amount' %>
    <%= form.text_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Transaction' %>
  </div>
<% end %>


<%= link_to 'Back', category_transactions_path(category_id: @category.id) %>

