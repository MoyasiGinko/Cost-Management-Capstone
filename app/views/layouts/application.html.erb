<!-- application.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= yield(:title) || 'CostManagement - CMS' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Add your custom styles here -->
    <%= yield(:styles) %>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        /* Navigation Bar Styles */
        header {
            background: linear-gradient(to bottom, #156, #146);
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            display: flex;
            justify-content: center;
            flex-direction: row;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li:last-child {
            margin-right: 0;
        }

        nav ul li a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            transition: color 0.3s;
        }

        nav ul li a:hover {
            color: #ecf0f1;
        }
    </style>
</head>
<body>

<% if user_signed_in? %>
  <header>
      <nav>
          <ul>
              <li><%= link_to 'Dashboard', root_path %></li>
              <li><%= link_to 'Categories', categories_path %></li>
              <!-- Change the line below to link to category's transactions -->
              <!-- Add links for your resources here -->
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= button_to 'Sign out', destroy_user_session_path, method: :delete %></li>
          </ul>
      </nav>
  </header>
<% end %>
    <% if notice %>
      <p class="alert alert-success px-10 py-2 bg-green-300"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger px-10 py-2 bg-red-300"><%= alert %></p>
    <% end %>


<%= yield %>

</body>
</html>
